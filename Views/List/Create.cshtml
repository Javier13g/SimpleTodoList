@using Microsoft.JSInterop
@model SimpleTodoList.Models.List

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>List</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="form-control">
                    <option>----Select an option----</option>
                </select>
                <span asp-validation-for="TitleList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleList" class="control-label"></label>
                <input asp-for="TitleList" class="form-control"/>
                <span asp-validation-for="TitleList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionList" class="control-label"></label>
                <textarea asp-for="DescriptionList" class="form-control"></textarea>
                <span asp-validation-for="DescriptionList" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                    <input class="form-check-input" asp-for="Complete"/> @Html.DisplayNameFor(model => model.Complete)
                
            </div>
            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control"/>
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}