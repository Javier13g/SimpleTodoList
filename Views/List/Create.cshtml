@using Microsoft.JSInterop
@model SimpleTodoList.Models.List

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container2">
    <h1>Create</h1>
    <h4>List</h4>
    <a asp-action="Index">Back to List</a>
</div>

<form class="form-registrer" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="controls">
            <option>----Select an option----</option>
        </select>
    </div>
    <div>
        <input asp-for="TitleList" class="controls" type="text" placeholder="Enter Title"/>
        <span asp-validation-for="TitleList" class="text-danger"></span>
    </div>
    <div>
        <textarea asp-for="DescriptionList" class="controls"  placeholder="Enter Description"></textarea>
        <span asp-validation-for="DescriptionList" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input class="form-check-input" asp-for="Complete"/> @Html.DisplayNameFor(model => model.Complete)
    </div>
    <div>
        <input asp-for="CreateDate" class="controls"/>
        <span asp-validation-for="CreateDate" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="botons"/>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}