@model IEnumerable<SimpleTodoList.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="main">
    <h1>Index</h1>
    <div class="d-grid gap-2">
        <a asp-action="Create" class="btn btn-primary" type="button">Create new</a>
    </div>
    <hr>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody id="datos">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.IdCategory">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCategory">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCategory">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
